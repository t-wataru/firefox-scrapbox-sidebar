{

    "manifest_version": 2,
    "name": "Twitter Sidebar",
    "description": "Displays mobile Twitter in the sidebar.",
    "version": "1.4",
    "applications": {
        "gecko": {
          "strict_min_version": "60.0"
        }
    },

    "options_ui": {
		"page": "options/options.html",
		"browser_style": true
    },

    "sidebar_action": {
		"default_icon": {
			"48": "icons/icon1_48.png",
			"96": "icons/icon1_96.png"
        },
        "default_title": "Twitter",
        "default_panel": "sidebar/panel.html"
    },

    "icons": {
        "48": "icons/icon2_48.png",
        "96": "icons/icon2_96.png"
		},

    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Shift+Alt+W"
            },
            "description": "Toggle the Twitter sidebar"
        }
    }
}
